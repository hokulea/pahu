{
  "name": "@hokulea/pahu",
  "version": "0.2.0",
  "description": "Hokulea headless forms with adapters for frameworks",
  "keywords": [
    "form",
    "headless",
    "agnostic",
    "native",
    "standard schema",
    "linked fields",
    "validation"
  ],
  "license": "MIT",
  "author": "Thomas Gossmann",
  "repository": "https://github.com/hokulea/pahu",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "imports": {
    "#src": "./src/index.ts",
    "#src/*": "./src/*",
    "#tests/*": "./tests/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "vite dev",
    "lint": "pnpm run '/^lint:(?!.*(fix)).*$/'",
    "lint:fix": "pnpm run '/^lint:[^:]*:fix/'",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "tsc --noEmit",
    "prepack": "pnpm build",
    "start": "tsdown --watch",
    "test": "vitest run",
    "test:ui": "vitest --browser.provider=preview --no-browser.headless --browser.name=chromium"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.0.0",
    "dot-prop": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.29.0",
    "@babel/eslint-parser": "^7.28.6",
    "@gossi/config-eslint": "^1.3.0",
    "@gossi/config-prettier": "^1.1.0",
    "@testing-library/dom": "10.4.1",
    "@vitest/browser": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.30.1",
    "playwright": "^1.58.2",
    "prettier": "^3.5.3",
    "release-plan": "^0.17.4",
    "tsdown": "^0.19.0",
    "type-fest": "^5.4.4",
    "typescript": "5.9.3",
    "valibot": "^1.2.0",
    "vite": "^7.3.1",
    "vitest": "4.0.18",
    "vitest-browser-html": "^0.1.3"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
