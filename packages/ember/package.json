{
  "name": "@hokulea/ember-pahu",
  "version": "0.0.3",
  "description": "Ember adapter for Hokulea headless forms",
  "keywords": [
    "form",
    "headless",
    "native",
    "standard schema",
    "linked fields",
    "validation",
    "ember"
  ],
  "license": "MIT",
  "author": "Thomas Gossmann",
  "repository": "https://github.com/hokulea/pahu",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "imports": {
    "#src": "./src/index.ts",
    "#tests/*": "./tests/*"
  },
  "exports": {
    ".": {
      "types": "./declarations/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "vite dev",
    "lint": "pnpm run '/^lint:(?!.*(fix)).*$/'",
    "lint:fix": "pnpm run '/^lint:[^:]*:fix/'",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "ember-tsc",
    "prepack": "pnpm build",
    "start": "tsdown --watch",
    "test": "vite build --mode=development && testem --file testem.cjs ci --port 0"
  },
  "dependencies": {
    "@hokulea/pahu": "workspace:*",
    "ember-modifier": "4.2.2",
    "ember-resources": "^7.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-typescript": "^7.28.6",
    "@babel/runtime": "^7.28.6",
    "@ember/app-tsconfig": "^2.0.0",
    "@ember/test-helpers": "^5.4.1",
    "@embroider/core": "^4.4.2",
    "@embroider/macros": "^1.19.6",
    "@embroider/vite": "^1.5.0",
    "@glint/ember-tsc": "^1.0.9",
    "@glint/template": "^1.7.3",
    "@gossi/config-eslint": "^1.3.0",
    "@gossi/config-prettier": "^1.1.0",
    "@gossi/config-template-lint": "^1.1.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@types/qunit": "^2.19.13",
    "@types/sinon": "^21.0.0",
    "babel-plugin-ember-template-compilation": "^4.0.0",
    "decorator-transforms": "^2.3.1",
    "dot-prop": "^9.0.0",
    "ember-qunit": "^9.0.4",
    "ember-source": "~6.10.0",
    "ember-strict-application-resolver": "^0.1.1",
    "ember-template-imports": "4.4.0",
    "ember-template-lint": "^7.9.1",
    "eslint": "^9.29.0",
    "eslint-plugin-ember": "^12.5.0",
    "eslint-plugin-qunit": "^8.1.2",
    "prettier": "^3.6.0",
    "qunit": "^2.25.0",
    "qunit-dom": "^3.5.0",
    "sinon": "^21.0.1",
    "testem": "^3.17.0",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
