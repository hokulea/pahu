{
  "name": "@hokulea/ember-pahu",
  "version": "0.0.1",
  "description": "Ember adapter for Hokulea headless forms",
  "keywords": [
    "form", "headless", "agnostic", "native", "standard schema", "linked fields", "validation", "ember"
  ],
  "license": "MIT",
  "author": "Thomas Gossmann",
  "repository": "https://github.com/hokulea/pahu",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "type": "module",
  "imports": {
    "#src": "./src/index.ts",
    "#tests/*": "./tests/*"
  },
  "exports": {
    ".": {
      "types": "./declarations/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "vite dev",
    "lint": "pnpm run '/^lint:(?!.*(fix)).*$/'",
    "lint:fix": "pnpm run '/^lint:[^:]*:fix/'",
    "lint:hbs": "ember-template-lint .",
    "lint:hbs:fix": "ember-template-lint . --fix",
    "lint:js": "eslint . --cache",
    "lint:js:fix": "eslint . --fix",
    "lint:types": "glint",
    "prepack": "pnpm build",
    "start": "tsdown --watch",
    "test": "vite build --mode=development && testem --file testem.cjs ci --port 0"
  },
  "dependencies": {
    "@hokulea/pahu": "workspace:*",
    "ember-modifier": "4.2.2",
    "ember-resources": "^7.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/plugin-transform-typescript": "^7.27.1",
    "@babel/runtime": "^7.27.6",
    "@ember/app-tsconfig": "^1.0.3",
    "@ember/test-helpers": "^5.2.2",
    "@embroider/core": "^4.1.3",
    "@embroider/macros": "^1.18.1",
    "@embroider/vite": "^1.1.6",
    "@glint/core": "^2.0.0-alpha.4",
    "@glint/environment-ember-loose": "^2.0.0-alpha.3",
    "@glint/environment-ember-template-imports": "^2.0.0-alpha.3",
    "@glint/template": "^1.6.0-alpha.2",
    "@gossi/config-eslint": "^1.3.0",
    "@gossi/config-prettier": "^1.1.0",
    "@gossi/config-template-lint": "^1.1.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@types/qunit": "^2.19.12",
    "@types/sinon": "^17.0.4",
    "babel-plugin-ember-template-compilation": "^2.2.5",
    "decorator-transforms": "^2.3.0",
    "dot-prop": "^9.0.0",
    "ember-qunit": "^9.0.2",
    "ember-source": "~6.5.0",
    "ember-strict-application-resolver": "^0.1.0",
    "ember-template-imports": "4.3.0",
    "ember-template-lint": "^7.9.1",
    "eslint": "^9.29.0",
    "eslint-plugin-ember": "^12.5.0",
    "eslint-plugin-qunit": "^8.1.2",
    "prettier": "^3.6.0",
    "qunit": "^2.24.1",
    "qunit-dom": "^3.4.0",
    "sinon": "^21.0.0",
    "testem": "^3.15.1",
    "tsdown": "^0.14.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "engines": {
    "node": "^20.11.0 || >=22"
  }
}
